<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
    <li data-target="#carousel-example-generic" data-slide-to="4"></li>
    <li data-target="#carousel-example-generic" data-slide-to="5"></li>
    <li data-target="#carousel-example-generic" data-slide-to="6"></li>
    <li data-target="#carousel-example-generic" data-slide-to="7"></li>
    <li data-target="#carousel-example-generic" data-slide-to="8"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider1.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Summer in Berlin
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider2.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Find the best cup of coffee in town
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider3.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Unusual spaces and hang outs
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider4.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Street food mania
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider5.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Berlin's signature shabby chic 
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider6.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        All about the vintage
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider7.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Culinary pleasures
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider8.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Brunch the Berliner way 
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider9.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Extraordinary nightlife
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<br class="clear" />

<div class="col-xs-12">
  <% @places.each do |place| %>
  	<div class="booyah-box col-xs-10 col-xs-offset-1 place-listings">
  		<h1><%= link_to place.name, place_path(place) %></h1><br />
  		<i><%= place.address %></i><br /><br />
  		<p><%= place.description %></p><br />

      <% if place.user.present? %>
        <small><%= place.user.email %></small>
      <% end %>

      <% if place.photos.present? %>
        <div class="col-xs-12">
          <br /><br />
          <%= image_tag place.photos.last.picture, :class => "pics" %>
        </div>
      <% end %>

      <% if place.comments.present? %>
        <div class="col-xs-12">
          <blockquote class="comment-box">
            <% if place.comments.last.humanized_rating.present? %>
              <b><%= place.comments.last.humanized_rating %></b>
            <% end %>
            <%= place.comments.last.message %>
            <% if place.comments.last.user.email.present? %>
              <small><%= place.comments.last.user.email %></small>
            <% end %>
          </blockquote>
        </div>
      <% end %>

  	</div>
  <% end %>
</div>

<div class="col-xs-12 pagination-footer">
  <%= will_paginate @places, :class => "nomster-pagination" %>
</div>



